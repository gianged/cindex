{
  "name": "@gianged/cindex",
  "version": "1.2.0",
  "description": "Semantic code search and context retrieval MCP server for large codebases",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "code-search",
    "semantic-search",
    "rag",
    "vector-search",
    "embeddings",
    "codebase-indexing",
    "claude-code",
    "llm",
    "ai",
    "developer-tools"
  ],
  "homepage": "https://github.com/gianged/cindex#readme",
  "bugs": {
    "url": "https://github.com/gianged/cindex/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gianged/cindex.git"
  },
  "license": "MIT",
  "author": {
    "name": "gianged",
    "email": "giangeddev@gmail.com"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "cindex": "dist/index.js"
  },
  "files": [
    "dist",
    "database.sql",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node esbuild.config.js build",
    "check-all": "npm run format:check && npm run lint && npm run type-check",
    "dev": "node esbuild.config.js dev",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "start": "node dist/index.js",
    "test": "jest",
    "type-check": "tsc --noEmit"
  },
  "config": {
    "default_db": "cindex_rag_codebase",
    "default_port": 5432
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "chalk": "^5.6.2",
    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "ignore": "^7.0.5",
    "js-yaml": "^4.1.1",
    "ora": "^9.0.0",
    "pg": "^8.16.3",
    "pgvector": "^0.2.1",
    "protobufjs": "^7.5.4",
    "tree-sitter": "^0.21.1",
    "tree-sitter-c": "^0.21.4",
    "tree-sitter-c-sharp": "^0.21.3",
    "tree-sitter-cpp": "^0.22.3",
    "tree-sitter-go": "^0.21.2",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-kotlin": "^0.3.8",
    "tree-sitter-php": "^0.23.12",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-ruby": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.21.2",
    "uuid": "^13.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.25.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
